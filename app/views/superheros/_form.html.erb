<div class="col-md-8 col-md-offset-2 text-center">
  <% @superhero.errors.full_messages.each do |e| %>
    <h2><span class="label label-danger"><%= e %></span></h2>
  <% end %><br>
  <%= form_for @superhero do |f| %>
   <div class="col-md-4 col-md-offset-4">
    <%= f.label "name:" %>
    <%= f.text_field :name, class: "form-control" %>  
   </div><br>
   <div class="col-md-4 col-md-offset-4">
    <%= f.label "height:" %>
    <%= f.text_field :height, class: "form-control" %>
   </div><br>
   <div class="col-md-4 col-md-offset-4">
    <%= f.label "bio: " %>
    <%= f.text_field :bio, class: "form-control" %>
   </div><br>
   <div class="col-md-4 col-md-offset-4">
    <%= f.label "image url: " %>
    <%= f.text_field :image_url, class: "form-control" %>
   </div><br>
   <div class="col-md-4 col-md-offset-4">
   <%= f.collection_check_boxes(:team_ids, @teams, :id, :name) do |b| %>
       <span>
         <%= b.check_box %>
         <%= b.label %>
       </span>
     <% end  %>
   </div><br>
   <div class="col-md-4 col-md-offset-4">
    <%= f.submit class: "form-control btn btn-primary" %>
   </div>
  <% end %>
</div>