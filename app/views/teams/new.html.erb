<h1 class="text-center">New Team</h1><hr>
<div class="col-md-8 col-md-offset-2 text-center">
  <% @team.errors.full_messages.each do |e| %>
    <h2><span class="label label-danger"><%= e %></span></h2>
  <% end %><br>
  <%= form_for [@user, @team] do |f| %>
   <div class="col-md-4 col-md-offset-4">
    <%= f.label "Team name:" %>
    <%= f.text_field :name, class: "form-control" %>  
   </div><br>
   <div class="col-md-4 col-md-offset-4">
    <%= f.label "Description:" %>
    <%= f.text_field :description, class: "form-control" %>
   </div><br>
   <div class="col-md-4 col-md-offset-4">
    <%= f.submit "New Team",class: "form-control btn btn-primary" %>
   </div>
  <% end %>
</div>