<% if @current_user %>
  <nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-left">
        <li><h4><strong>Welcome back <%= @current_user.username %>!</strong></h4></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><input type="button" class="btn btn-default" onclick="location.href='/logout'" value="Log Out"><span class="sr-only">(current)</span></li>
        <li><button class="btn btn-default"><%= link_to "New TEAM", new_user_team_path(@current_user) %></button><span class="sr-only">(current)</span></li>
         <li><button class="btn btn-default"><%= link_to "See Superheros", superheros_path %></button><span class="sr-only">(current)</span></li>
      </ul>
  </div>
</nav>
<% else %>
    <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/signup">Sign Up <span class="sr-only">(current)</span></a></li>
          <li><a href="/login">Log in <span class="sr-only">(current)</span></a></li>
        </ul>
    </div>
  </nav>
<% end %>

  <% flash.each do |key, value| %>
    <% if key == "notice" %>
      <%= content_tag :div, value, class: "text-center alert alert-warning" %>
    <% elsif key == "alert" %>
      <%= content_tag :div, value, class: "text-center alert alert-danger" %>
    <% else %>
      <%= content_tag :div, value, class: "text-center alert alert-sucess" %>
    <% end %>
  <% end %>
